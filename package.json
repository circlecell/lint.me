{
  "name": "lint.me",
  "version": "0.0.0",
  "private": true,
  "description": "lint.me source code",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run stylelint || echo 'test is exited with 1'",
    "bundle": "NODE_ENV=production webpack",
    "develop": "opn http://localhost:5003; PORT=5003 NODE_ENV=development nodemon --harmony-async-await server.js --watch packages/backend --watch webpack --watch server.js --watch package.json",
    "lint": "eslint .",
    "stylelint": "stylelint packages/frontend/css/*.css",
    "install-all": "yarn install && lerna exec -- yarn install",
    "upgrade": "yarn upgrade && lerna exec -- yarn upgrade",
    "start": "pm2 startOrRestart ecosystem.json --watch",
    "deploy": "if-env TRAVIS_BRANCH=master && npm run deploy-production || if-env TRAVIS_BRANCH=stage && npm run deploy-stage || echo \"Cannot deploy branch $TRAVIS_BRANCH\"",
    "deploy-production": "pm2 deploy ecosystem.json production",
    "deploy-stage": "npm run semantic-release",
    "post-deploy-remote": "npm run install-all && npm run bundle",
    "semantic-release": "semantic-release pre && git stash && git status && pm2 deploy ecosystem.json stage && git stash apply --index && semantic-release post || echo 'Deployment is not run';"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "release": {
    "getLastRelease": "last-release-git",
    "branch": "stage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/circlecell/lint.me.git"
  },
  "author": "Circlecell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/circlecell/lint.me/issues"
  },
  "homepage": "https://github.com/circlecell/lint.me#readme",
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-1": "^6.16.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.9.0",
    "eslint-config-airbnb-base": "^9.0.0",
    "eslint-plugin-import": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "lerna": "2.0.0-beta.30",
    "nodemon": "^1.11.0",
    "opn-cli": "^3.1.0",
    "postcss-calc": "^5.3.1",
    "postcss-cssnext": "^2.8.0",
    "postcss-loader": "^1.1.0",
    "postcss-nested": "^1.0.0",
    "semantic-release": "^4.3.5",
    "style-loader": "^0.13.1",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^14.0.0",
    "text-loader": "0.0.1",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.1"
  },
  "dependencies": {
    "commitizen": "^2.8.6",
    "ghooks": "^1.3.2",
    "if-env": "^1.0.0",
    "last-release-git": "^0.0.1",
    "validate-commit-msg": "^2.8.2"
  }
}
